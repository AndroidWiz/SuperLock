<resources>

    <style name="Theme.SuperLock" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>


    <style name="Theme.SuperLock.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <!--        <item name="android:windowBackground">@color/transparent</item>-->
        <item name="android:windowBackground">#94D9D9D9</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="Theme.SuperLock.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SuperLock.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>